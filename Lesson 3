//click and get circles 
boolean drawCircles = false;
void setup() {
  size(1280, 720);
};
void draw() {
  fill(255, 0, 0);
  //noStroke();
  rect(0, 0, width, height);
  //drawFiveCircles();
  if (drawCircles ==true) {
    drawFiveCircles();
  };
};
void mousePressed() {
  println("mouse pressed");
  drawCircles = !drawCircles;
};
void drawFiveCircles() {
  for (int i=0; i<5; i++) {
    ellipse(i*200, height/2, 50, 50);
  };
};
