//initializing variables
int x= 640/2 ;
int y= 480/2;

void setup() {
  size(640, 480);

  float someDecimalNumber = 3.14;
}; 


void draw() {
  background(255,255,255);
 // x= x+1;// will keep moving along the x axis. 

  rectMode(CENTER);
  fill(255, 0, 0);
  x= mouseX;
  y =mouseY;
  rect(x, y, 400, 400);

  fill(0, 255, 0);
  rect(x, y, 300, 300);
  fill(0, 0, 255);
  ellipse(x, y, 200, 200);
};
