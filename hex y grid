int y;
float x=0;
int speed =5;
void setup() {
  size(1080, 900);
  frameRate(70);
}

void draw() {
  grid();
}

void grid() {
  background(100);
y+=speed;
  for (int i= 0; i<width; i+=250){
  //for (int y=0; y<width; y+=250){

beginShape();
vertex(i+100,100+y);
vertex(i+175,50+y);
vertex(i+250,100+y);
vertex(i+250,200+y);
vertex(i+175,250+y);
vertex(i+100,200+y);
vertex(i+100,100+y);
vertex(i+100,200+y);
endShape();
//};
};
 if (y>height) {
    y=-1;
  };
};
